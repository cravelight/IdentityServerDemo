<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ImplicitFlow : @ViewBag.Title</title>
    <link href="~/assets/darkly.bootswatch.min.css" rel="stylesheet">
    <script src="~/assets/jquery.min.js"></script>
    <script src="~/assets/bootswatch.min.js"></script>
    <style>
        .body-content {
            margin-top: 100px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ImplicitFlow Client Demo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Sign In", "SignIn", "Account")</li>
                    <li>@Html.ActionLink("Sign Out", "SignOut", "Account")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ImplicitFlow Client Demo</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
